<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintTop_toBottomOf="@+id/hello_world"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="displayName"
        app:layout_constraintTop_toBottomOf="@+id/hello_world"
        app:layout_constraintStart_toEndOf="@+id/label_display_name"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/label_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate: "
        app:layout_constraintTop_toBottomOf="@+id/label_display_name"/>

    <TextView
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthdate"
        app:layout_constraintTop_toBottomOf="@+id/display_name"
        app:layout_constraintStart_toEndOf="@+id/label_birthdate"/>

    <TextView
        android:id="@+id/label_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintTop_toBottomOf="@+id/label_birthdate"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="country"
        app:layout_constraintTop_toBottomOf="@+id/birthdate"
        app:layout_constraintStart_toEndOf="@+id/label_country"/>

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintTop_toBottomOf="@+id/label_country"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        app:layout_constraintTop_toBottomOf="@+id/country"
        app:layout_constraintStart_toEndOf="@+id/label_email"/>

</androidx.constraintlayout.widget.ConstraintLayout>