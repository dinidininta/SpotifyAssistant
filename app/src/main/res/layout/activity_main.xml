<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_display_name"
        app:layout_constraintTop_toBottomOf="@+id/hello_world"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/display_name"
        app:layout_constraintTop_toBottomOf="@+id/hello_world"
        app:layout_constraintStart_toEndOf="@+id/label_display_name"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/label_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_birthdate"
        app:layout_constraintTop_toBottomOf="@+id/label_display_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/birthdate"
        app:layout_constraintTop_toBottomOf="@+id/display_name"
        app:layout_constraintStart_toEndOf="@+id/label_birthdate"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/label_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_country"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintTop_toBottomOf="@+id/label_birthdate"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/country"
        app:layout_constraintTop_toBottomOf="@+id/birthdate"
        app:layout_constraintStart_toEndOf="@+id/label_country"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintTop_toBottomOf="@+id/label_country"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/email"
        app:layout_constraintTop_toBottomOf="@+id/country"
        app:layout_constraintStart_toEndOf="@+id/label_email"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/btn_open_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_playlist"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_open_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_assistant"
        app:layout_constraintTop_toBottomOf="@+id/btn_open_playlist"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>